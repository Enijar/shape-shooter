{
  "private": true,
  "scripts": {
    "postinstall": "concurrently \"npm --prefix client install\" \"npm --prefix server install\"",
    "format": "prettier --write \"client/src/**/*.{js,jsx,ts,tsx},server/src/**/*.{js,jsx,ts,tsx}\"",
    "lint": "prettier --check \"client/src/**/*.{js,jsx,ts,tsx},server/src/**/*.{js,jsx,ts,tsx}\"",
    "start": "concurrently \"npm --prefix client start\" \"npm --prefix server start\"",
    "build": "concurrently \"npm --prefix client run build\" \"npm --prefix server run build\""
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "prettier": "^2.2.1",
    "typescript": "^4.1.3"
  }
}
